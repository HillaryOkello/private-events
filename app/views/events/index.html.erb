<div class="container">
<h2>Past Events</h2>

  <% @previous_events.each do |event| %>
      <h4><%= event.name %></h4>
      <p><%= event.description %></p>
      <span><%= event.creator.name %></span>
      <h5><%= event.date%></h5>
  <% end %> 

</div>

<div class="container">
<h2>Upcoming Events</h2>
<% @upcoming_events.each do |event| %>  
      <h4><%= event.name %></h4>
      <p><%= event.description %></p>
      <span><%= event.creator.name %></span>
      <h5><%= event.date%></h5>
<% end %>
</div>
