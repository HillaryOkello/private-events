<div class="container">
  <h3><%= @event.name %></h3>
  <p><%= @event.description %></p>
  <h5><%= @event.date%></h5>
  <span><%= @event.creator.name %></span>

  <% if @event.registrations.empty? %>
    <p>Event has no events attendees</p>
  <% else %>
    <% @event.registrations.each do |registrations| %>
      <% @user.events.previous_events.each do |event| %>
        <h5 class = "card-title">Location: <%= event.location %> Time: <%= event.date%><%= link_to "->", event_path(event) %></h5>
        <p class = "card-text ">Description: <%= event.description %> </p>
      <%end%>
      <li><%=link_to registrations.name, registrations_path(registrations) %></li>
     <% end %>
  <% end %>
</div>

